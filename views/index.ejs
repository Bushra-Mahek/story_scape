

  <%- include('partials/header.ejs') %>
  <main>
    <section class="hero">
      <h2>Recent</h2>
      <h3>Latest from your subscriptions.</h3>
    </section>


    <section class="content-area">
      <% posts.forEach(function(post) { %>
        <div class="post-card">
          <div class="post-meta">
            <p class="post-author"><%= post.author %> </p>
            <p class="post-date"><%= post.date %></p>
          </div>

          <% if(post.image) { %>
            <img src="<%= post.image %>" alt="<%= post.title %>" class="post-image">
          <% } %>

          <div class="post-details">
            <h2 class="post-title"><%= post.title %></h2>
            <p class="post-content"><%= post.content %></p>
            <div class="bottom">
            <a href="/posts/<%= post.id %>" class="read-more-link">Read More...</a>
            <button class="edit"><a href="/posts/<%= post.id %>/edit" class="edit2" >Edit</a></button>
            <button class="delete" data-id="<%= post.id %>">Delete</button>
            </div>
          </div>
        </div>
        <% }) %>
      
      </section>

      <div id="deleteModal" class="modal hidden">
        <div class="modal-content">
          <form id="deleteForm" method="POST">
            <p>Are you sure you want to delete this post?</p>
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" style="background:red;color:white;">Yes, Delete</button>
        <button type="button" id="cancelDelete">Cancel</button>
          </form>
        </div>
        </div>

    
    
  </main>

  <script src="scripts/script.js"></script>
  <%- include('partials/footer.ejs') %>
