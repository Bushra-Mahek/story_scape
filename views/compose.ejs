<%- include('partials/header.ejs') %>

<main class="compose-page" style="max-width:760px;margin:2rem auto;padding:1rem;">
  <h1>Compose a new post</h1>

  <form action="/compose" method="post" enctype="multipart/form-data" class="compose-form">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" required>
      </div>
      <div class="form-group">
      <label for="author">Author</label>
      <input type="text" id="author" name="author" required>
      </div>
      <div class="form-group">
      <label for="image">Image URL</label>
      <input type="file" id="image" name="image" accept="image/*">
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea id="content" name="content" rows="10" required></textarea>
    </div>
    <button type="submit" class="submit-button">Publish</button>
  </form>

<%- include('partials/footer.ejs') %>
